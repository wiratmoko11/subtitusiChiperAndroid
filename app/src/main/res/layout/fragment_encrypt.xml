<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="Kata Awal"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:layout_marginBottom="10dp"
                android:background="@color/colorFormInput"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editTextNormal"
                android:gravity="top|left"
                android:padding="10dp"
                android:layout_height="125dp" />

            <TextView
                android:text="Kunci Enkripsi"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <EditText
                    android:background="@color/colorFormInput"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextKunci"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp" />

                <Button
                    android:text="Button"
                    android:background="@drawable/button_primary"
                    android:id="@+id/btnEncrypt"
                    android:textColor="@color/colorFormInput"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="250dp"
                    android:layout_height="45dp" />
            </LinearLayout>

            <TextView
                android:text="Hasil Enkripsi"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <EditText
                android:background="@color/colorFormInput"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editTextEncrypted"
                android:gravity="top|left"
                android:layout_height="125dp"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>